---
// import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import YoutubeIcon from "./icons/YoutubeIcon.astro";
import GithubIcon from "./icons/GithubIcon.astro";
import TwitterIcon from "./icons/TwitterIcon.astro";
---

<header class="flex flex-wrap justify-between items-center px-4 py-2">
  <h2 class="font-bold text-2xl mr-6">Rohan Kewalramani</h2>
  <nav class="flex-grow flex flex-wrap justify-end space-x-4">
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/about">About</HeaderLink>
    <HeaderLink href="/setup">Setup</HeaderLink>
    <HeaderLink href="https://www.youtube.com/rohankewalramani" target="_blank">
      <YoutubeIcon class="w-9" />
    </HeaderLink>
    <HeaderLink href="https://www.twitter.com/rohankewal" target="_blank">
      <TwitterIcon class="w-9" />
    </HeaderLink>
    <HeaderLink href="https://www.github.com/rohankewal" target="_blank">
      <GithubIcon class="w-9" />
    </HeaderLink>
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
</style>
