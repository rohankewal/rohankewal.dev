---
import HeaderLink from "./HeaderLink.astro";
import YoutubeIcon from "./icons/YoutubeIcon.astro";
import GithubIcon from "./icons/GithubIcon.astro";
import TwitchIcon from "./icons/TwitchIcon.astro"
import TwitterIcon from "./icons/TwitterIcon.astro";
import MastedonIcon from "./icons/MastedonIcon.astro"
---

<header class="flex justify-between items-center px-4 py-2">
  <HeaderLink href="/" class="no-underline active:no-underline">
    <h2 class="font-bold text-2xl mr-6 no-underline active:no-underline hover:no-underline">Rohan Kewalramani</h2>
  </HeaderLink>
  <nav class="flex items-center space-x-7">
    <HeaderLink href="/blog">Posts</HeaderLink>
    <HeaderLink href="/about">About</HeaderLink>
    <HeaderLink href="/setup">Setup</HeaderLink>
  </nav>
  <nav class="flex items-center space-x-5">
    <HeaderLink href="https://www.youtube.com/rohankewalramani" target="_blank">
      <YoutubeIcon class="w-7" />
    </HeaderLink>
    <HeaderLink href="https://www.twitter.com/rohankewal" target="_blank">
      <TwitterIcon class="w-7" />
    </HeaderLink>
    <HeaderLink href="https://www.twitch.tv/rohankewal" target="_blank">
      <TwitchIcon class="w-7" />
    </HeaderLink>
    <HeaderLink href="https://mastodon.social/@rohankewal" target="_blank">
      <MastedonIcon class="w-7" />
    </HeaderLink>
    <HeaderLink href="https://www.github.com/rohankewal" target="_blank">
      <GithubIcon class="w-7" />
    </HeaderLink>
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
</style>
