---
import React, { useState, useEffect } from "react"
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import { FaGithubAlt, FaTwitter, FaYoutube, FaMoon, FaSun } from 'react-icons/fa';

const [isDarkMode, setIsDarkMode] = useState(false);

function toggleDarkMode() {
  setIsDarkMode(prev => !prev);
  if (!isDarkMode) {
    document.body.classList.add('dark');
  } else {
    document.body.classList.remove('dark');
  }
}
---

<header class='flex flex-wrap justify-between items-center px-4 py-2'>
	<h2 class='font-bold text-2xl mr-6'>Rohan Kewalramani</h2>
	<nav class='flex-grow flex flex-wrap justify-end space-x-4'>
		<HeaderLink href='/'>Home</HeaderLink>
		<HeaderLink href='/blog'>Blog</HeaderLink>
		<HeaderLink href='/about'>About</HeaderLink>
    {isDarkMode 
    ? <FaSun onClick={toggleDarkMode} className="text-yellow-400 cursor-pointer" />
    : <FaMoon onClick={toggleDarkMode} className="text-gray-500 cursor-pointer" />}
		<a
			href='https://www.youtube.com/channel/UCRtXR1SLPBti1p5bNAioIuw'
			target='_blank'
		>
			<FaYoutube className='text-3xl text-red-600' />
		</a>
		<a href='https://twitter.com/rohankewal' target='_blank'>
			<FaTwitter className='text-3xl text-blue-600' />
		</a>
		<a href='https://github.com/rohankewal' target='_blank'>
			<FaGithubAlt className='text-3xl text-black' />
		</a>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
